<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            {{# if hasErrors }}
            <div class="alert alert-danger">
                <button class="close" data-dismiss="alert">Ã—</button>
                {{#each messages}}
                <strong>Failed!</strong> {{this.msg}} <br>
                {{/each}}
            </div>
            {{/if}}

            <p></p>

            <div class="widget-box">

                <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
                    <h5>Create Province</h5>
                    <div class="pull-right" style="margin-top:2px;">
                        <a href="/admin/province" class="btn btn-primary btn-lg">Provinces List</a>

                    </div>
                </div>
                <div class="widget-content nopadding">
                    <form class="form-horizontal" method="post" action="/admin/bloodgroup/update" name="basic_validate"
                        id="basic_validate" novalidate="novalidate">
                        <div class="control-group">
                            <label class="control-label">Blood Group</label>
                            <div class="controls">
                                <input type="hidden" value="{{bloodgroup._id}}" name="id">
                                <input type="text" name="name" id="name" value="{{bloodgroup.blood_group}}">
                            </div>
                        </div>
                        
                        <div class="form-actions">
                            <input type="submit" value="Validate" class="btn btn-success">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>