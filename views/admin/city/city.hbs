<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            {{# if messages }}
            <div class="alert alert-success">
                <button class="close" data-dismiss="alert">×</button>
                <strong>Success!</strong> {{messages}}
            </div>
            {{/if}}
            {{# if success }}
            <div class="alert alert-success">
                <button class="close" data-dismiss="alert">×</button>
                <strong>Success!</strong> {{success}}
            </div>
            {{/if}}
            <div class="widget-box">

                <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
                    <h5>Data table</h5>

                    <div class="pull-right" style="margin-top:2px;">
                        <a href="city/create" class="btn btn-primary btn-lg">Add City</a>
                    </div>
                </div>
                <div class="widget-content nopadding">
                    <table class="table table-bordered data-table">
                        <thead>
                            <tr>

                                <th>Name</th>
                                <th>Postal Code</th>
                                <th>District</th>
                                <th>Province</th>
                            
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{# if cities}}
                            {{# each cities}}
                            <tr>
                                <td>{{this.c_name}}</td>

                                <td>{{this.postcode }}</td>
                                <td>{{this.district}}</td>
                                <td>{{this.state}}</td>
                                <td>

                                    <a  href="#myModal" onclick="changeDeleteID('{{this._id}}')" data-toggle="modal" class="btn btn-danger" class="btn btn-danger btn-sm">
                                        Delete
                                    </a>
                                    <a href="city/edit/{{this._id}}" data-donor-id="" class="btn btn-light btn-sm">
                                        Edit
                                    </a>
                                    {{!-- <span style="display:block; width:1px;"></span> --}}

                                </td>
                            </tr>
                            </tr>
                            {{/each}}
                            {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="myModal" class="modal hide modal-sm" style="width: 25%;margin-left:-1%">
    <div class="modal-header">
        <button data-dismiss="modal" class="close" type="button">×</button>
        <h3>Pop up Header</h3>
    </div>
    <div class="modal-body">
        <p>Here is the text coming you can put also image if you want…</p>
    </div>
    <div class="modal-footer">
        <a type="button" class="btn btn-default" id="delete_no" href="">Yes</a>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
</div>

<script>
    function changeDeleteID(x){
        let url = "city/delete/"+x;
        var uzair = document.getElementById('delete_no').href = url;
    }
    
</script>
